			<fontPath>./../fonts/AdobeBlank.ttf</fontPath>
		</datetime>
		
	<!-- Game List -->
		<image name="gamelist-matte" extra="true">
			<size>0.4743 0.7745</size>
		</image>
		
		<textlist name="gamelist">
			<size>0.4743 0.71</size>
		</textlist>
	</view>
	
