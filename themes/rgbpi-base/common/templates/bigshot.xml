	<view name="detailed">
	
	<!-- Game Image 600x600 -->
		<image name="image-matte" extra="true">
			<path>./../images/white.png</path>
			<origin>0.0 0.0</origin>
			<pos>0.5343 0.16</pos>
			<size>0.4357 0.7745</size>
		</image>
		
		<image name="md_image">
			<origin>0.5 0.5</origin>
			<pos>0.75215 0.55</pos>
			<maxSize>0.388 0.6898</maxSize>
		</image>
		
	<!-- Metadata - Unused -->
