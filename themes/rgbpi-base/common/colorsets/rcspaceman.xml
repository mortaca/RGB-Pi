<theme>
    <formatVersion>3</formatVersion>	

<!-- System View -->
	<view name="system">	
	<!-- Page Layout -->
		<image name="background" extra="true">
			<path>./../images/stardust_dark.png</path>
		</image>
		
		<image name="bottom" extra="true">
			<color>12181E</color>
		</image>
		
		<image name="bottom-highlight" extra="true">
			<color>CDD6E9</color>
		</image>
	
		<helpsystem name="help">
			<textColor>CDD6E9</textColor>
			<iconColor>CDD6E9</iconColor>
		</helpsystem>
		
	<!-- System Specific Images -->
		<image name="overlay" extra="true">
			<color>654883</color>
		</image>
	</view>
	
	
<!-- Game View - All -->
    <view name="basic, detailed">
	<!-- Page Layout -->
		<image name="background" extra="true">
			<path>./../images/stardust_dark.png</path>
		</image>
		
		<image name="top" extra="true">
			<color>12181E</color>	
		</image>
		
		<image name="top-highlight" extra="true">
			<color>CDD6E9</color>	
		</image>
		
		<image name="bottom" extra="true">
			<color>12181E</color>
		</image>
		
		<image name="bottom-highlight" extra="true">
			<color>CDD6E9</color>
		</image>
		
		<helpsystem name="help">
			<textColor>CDD6E9</textColor>
			<iconColor>CDD6E9</iconColor>
		</helpsystem>		
		
	<!-- System Specific Images -->
		<image name="logo">
		</image>
		
		<image name="overlay" extra="true">
			<color>654883</color>
		</image>
		
	<!-- Game List -->
		<image name="gamelist-matte" extra="true">
			<color>FFFFFF11</color>
		</image>
	
		<textlist name="gamelist">
			<primaryColor>CDD6E9</primaryColor>
			<secondaryColor>CDD6E9</secondaryColor>
			<selectorColor>654883</selectorColor>
			<selectedColor>000000</selectedColor>
		</textlist>
	</view>


<!-- Game View - Basic -->
	<view name="basic">
		<image name="overlay" extra="true">
			<color>65488399</color>
		</image>
	</view>


<!-- Game View - Detailed -->
	<view name="detailed">
	<!-- Game Image -->
		<image name="image-matte" extra="true">
			<color>FFFFFF11</color>
		</image>
	
	<!-- Metadata -->			
		<image name="meta-matte" extra="true">
			<color>FFFFFF11</color>
		</image>
		
		<text name="md_lbl_players, md_lbl_genre, md_lbl_developer, md_lbl_publisher, md_lbl_releasedate">
			<color>CDD6E9</color>
		</text>
		
		<text name="md_players, md_genre, md_developer, md_publisher">
			<color>CDD6E9</color>
		</text>
		
		<datetime name="md_releasedate">
			<color>CDD6E9</color>
		</datetime>
		
	<!-- Description -->
		<image name="description-matte" extra="true">
			<color>FFFFFF11</color>
		</image>
		
		<text name="md_description">
			<color>CDD6E9</color>
		</text>		
	</view>
	
</theme>