<theme>
    <formatVersion>3</formatVersion>	

<!-- System View -->
	<view name="system">	
	<!-- Page Layout -->
		<image name="background" extra="true">
			<path>./../images/stardust_dark.png</path>
		</image>
		
		<image name="bottom" extra="true">
			<color>6A896F</color>
		</image>
		
		<image name="bottom-highlight" extra="true">
			<color>721E1E</color>
		</image>
	
		<helpsystem name="help">
			<textColor>F9BD54</textColor>
			<iconColor>F9BD54</iconColor>
		</helpsystem>
		
	<!-- System Specific Images -->
		<image name="overlay" extra="true">
			<color>DDDDDD</color>
		</image>
	</view>
	
	
<!-- Game View - All -->
    <view name="basic, detailed">
	<!-- Page Layout -->
		<image name="background" extra="true">
			<path>./../images/stardust_dark.png</path>
		</image>
		
		<image name="top" extra="true">
			<color>6A896F</color>	
		</image>
		
		<image name="top-highlight" extra="true">
			<color>721E1E</color>	
		</image>
		
		<image name="bottom" extra="true">
			<color>6A896F</color>
		</image>
		
		<image name="bottom-highlight" extra="true">
			<color>721E1E</color>
		</image>
		
		<helpsystem name="help">
			<textColor>F9BD54</textColor>
			<iconColor>F9BD54</iconColor>
		</helpsystem>		
		
	<!-- System Specific Images -->
		<image name="logo">
		</image>
		
		<image name="overlay" extra="true">
			<color>111111</color>
		</image>
		
	<!-- Game List -->
		<image name="gamelist-matte" extra="true">
			<color>A8A7A588</color>
		</image>
	
		<textlist name="gamelist">
			<primaryColor>F9BD54</primaryColor>
			<secondaryColor>F9BD54</secondaryColor>
			<selectorColor>721E1E</selectorColor>
			<selectedColor>F9BD54</selectedColor>
		</textlist>
	</view>


<!-- Game View - Basic -->
	<view name="basic">
		<image name="overlay" extra="true">
			<color>721E1E66</color>
		</image>
	</view>


<!-- Game View - Detailed -->
	<view name="detailed">
	<!-- Game Image -->
		<image name="image-matte" extra="true">
			<color>A8A7A588</color>
		</image>
	
	<!-- Metadata -->			
		<image name="meta-matte" extra="true">
			<color>A8A7A588</color>
		</image>
		
		<text name="md_lbl_players, md_lbl_genre, md_lbl_developer, md_lbl_publisher, md_lbl_releasedate">
			<color>111111</color>
		</text>
		
		<text name="md_players, md_genre, md_developer, md_publisher">
			<color>111111</color>
		</text>
		
		<datetime name="md_releasedate">
			<color>111111</color>
		</datetime>
		
	<!-- Description -->
		<image name="description-matte" extra="true">
			<color>A8A7A588</color>
		</image>
		
		<text name="md_description">
			<color>111111</color>
		</text>		
	</view>
	
</theme>