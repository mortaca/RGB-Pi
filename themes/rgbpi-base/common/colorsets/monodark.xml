<theme>
    <formatVersion>3</formatVersion>	

<!-- System View -->
	<view name="system">	
	<!-- Page Layout -->
		<image name="background" extra="true">
			<path>./../images/binding_dark.png</path>
		</image>
		
		<image name="bottom" extra="true">
			<color>000000</color>
		</image>
		
		<image name="bottom-highlight" extra="true">
			<color>3D3D3D</color>
		</image>
	
		<helpsystem name="help">
			<textColor>5E5E5E</textColor>
			<iconColor>5E5E5E</iconColor>
		</helpsystem>
		
	<!-- System Specific Images -->
		<image name="overlay" extra="true">
			<color>A0A0A0</color>
		</image>
	</view>
	
	
<!-- Game View - All -->
    <view name="basic, detailed">
	<!-- Page Layout -->
		<image name="background" extra="true">
			<path>./../images/binding_dark.png</path>
		</image>
		
		<image name="top" extra="true">
			<color>000000</color>	
		</image>
		
		<image name="top-highlight" extra="true">
			<color>3D3D3D</color>	
		</image>
		
		<image name="bottom" extra="true">
			<color>000000</color>
		</image>
		
		<image name="bottom-highlight" extra="true">
			<color>3D3D3D</color>
		</image>
		
		<helpsystem name="help">
			<textColor>5E5E5E</textColor>
			<iconColor>5E5E5E</iconColor>
		</helpsystem>		
		
	<!-- System Specific Images -->
		<image name="logo">
		</image>
		
		<image name="overlay" extra="true">
			<color>5E5E5E</color>
		</image>
		
	<!-- Game List -->
		<image name="gamelist-matte" extra="true">
			<color>000000AA</color>
		</image>
	
		<textlist name="gamelist">
			<primaryColor>A0A0A0</primaryColor>
			<secondaryColor>A0A0A0</secondaryColor>
			<selectorColor>990000</selectorColor>
			<selectedColor>FFFFFF</selectedColor>
		</textlist>
	</view>


<!-- Game View - Basic -->
	<view name="basic">
		<image name="overlay" extra="true">
			<color>FFFFFF18</color>
		</image>
	</view>


<!-- Game View - Detailed -->
	<view name="detailed">
	<!-- Game Image -->
		<image name="image-matte" extra="true">
			<color>000000AA</color>
		</image>
	
	<!-- Metadata -->			
		<image name="meta-matte" extra="true">
			<color>000000AA</color>
		</image>
		
		<text name="md_lbl_players, md_lbl_genre, md_lbl_developer, md_lbl_publisher, md_lbl_releasedate">
			<color>A0A0A0</color>
		</text>
		
		<text name="md_players, md_genre, md_developer, md_publisher">
			<color>A0A0A0</color>
		</text>
		
		<datetime name="md_releasedate">
			<color>A0A0A0</color>
		</datetime>
		
	<!-- Description -->
		<image name="description-matte" extra="true">
			<color>000000AA</color>
		</image>
		
		<text name="md_description">
			<color>A0A0A0</color>
		</text>		
	</view>
	
</theme>
