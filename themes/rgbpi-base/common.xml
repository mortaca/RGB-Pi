<theme>
    <formatVersion>4</formatVersion>
	<include>./colorset.xml</include>
	
<!-- System View -->
	<view name="system">	
	<!-- Page Layout -->
		<image name="background" extra="true">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<tile>true</tile>
		</image>
		
		<image name="bottom" extra="true">
			<path>./common/images/white.png</path>
			<origin>0 1</origin>
			<pos>0 1</pos>			
			<size>1 0.0655</size>
		</image>
		
		<image name="bottom-highlight" extra="true">
			<path>./common/images/white.png</path>
			<origin>0 0</origin>
			<pos>0 0.9345</pos>
			<size>1 0.005</size>
		</image>
		
	<!-- System Specific Images -->
		<image name="overlay" extra="true">
			<origin>0.5 0.5</origin>
			<pos>0.5 0.19</pos>			
			<maxSize>0.5 0.325</maxSize>
		</image>
	</view>


<!-- Game View - All -->
    <view name="basic, detailed">
	<!-- Page Layout -->
		<image name="background" extra="true">		
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<tile>true</tile>
		</image>
		
		<image name="top" extra="true">
			<path>./common/images/white.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 0.16</size>
		</image>
		
		<image name="top-highlight" extra="true">
			<path>./common/images/whiter.png</path>
			<origin>0 1</origin>
			<pos>0 0.161</pos>
			<size>1 0.004</size>
		</image>
		
		<image name="bottom" extra="true">
			<path>./common/images/white.png</path>
			<origin>0 1</origin>
			<pos>0 1</pos>
			<size>1 0.0655</size>
		</image>
		
		<image name="bottom-highlight" extra="true">
			<path>./common/images/white.png</path>
			<origin>0 0</origin>
			<pos>0 0.9345</pos>
			<size>1 0.005</size>
		</image>
		
	<!-- System Specific Images -->
		<image name="logo">			
			<!-- Left Aligned at Top -->
			<origin>0 0.5</origin>
			<pos>0.03 0.0775</pos>
			<maxSize>0.55 0.12</maxSize>
		</image>
		
		<image name="overlay" extra="true">
			<!-- Right Aligned at Top -->
			<origin>1 0.5</origin>
			<pos>0.97 0.0775</pos>
			<maxSize>0.37 0.13</maxSize>
		</image>
		
	<!-- Game List -->
		<image name="gamelist-matte" extra="true">
			<path>./common/images/white.png</path>
			<origin>0 0</origin>
			<pos>0.03 0.16</pos>
			<size>0.36 0.7745</size>
		</image>
		
		<textlist name="gamelist">
			<fontPath>./common/fonts/OpenSans-Bold.ttf</fontPath>
			<pos>0.02 0.175</pos>
			<size>0.36 0.71</size>
			<fontSize>0.035</fontSize>
			<lineSpacing>1.31</lineSpacing>
			<horizontalMargin>0.015</horizontalMargin>
			<alignment>left</alignment>
			<forceUppercase>1</forceUppercase>
			<!--<scrollSound>./common/sounds/slide003.wav</scrollSound>-->
		</textlist>
	</view>


<!-- Game View - Basic -->
	<view name="basic">
	<!-- Page Layout -->
		<image name="overlay" extra="true">
			<origin>0.5 0.5</origin>
			<pos>0.715 0.55</pos>
			<maxSize>0.51 0.7</maxSize>			
		</image>
		
	<!-- GAME LIST - SANS IMAGES-->
		<image name="gamelist-matte" extra="true">
			<size>0.5 0.7745</size>
		</image>
		
		<textlist name="gamelist">
			<size>0.5 0.72</size>
		</textlist>
	</view>


<!-- Game View - Detailed -->
	<view name="detailed">
	<!-- Metadata -->
		<text name="md_lbl_players, md_lbl_genre, md_lbl_developer, md_lbl_publisher, md_lbl_releasedate">
			<fontPath>./common/fonts/Lato-Black.ttf</fontPath>
			<fontSize>0.023</fontSize>
			<forceUppercase>1</forceUppercase>			
			<size>0 0</size>
		</text>
		
		<text name="md_players, md_genre, md_developer, md_publisher">
			<fontPath>./common/fonts/Lato-Regular.ttf</fontPath>
			<fontSize>0.023</fontSize>
			<size>0 0</size>
		</text>
		
		<datetime name="md_releasedate">
			<fontPath>./common/fonts/Lato-Regular.ttf</fontPath>
			<fontSize>0.023</fontSize>
		</datetime>

		
	<!-- Description -->
		<text name="md_description">
			<fontPath>./common/fonts/Lato-Regular.ttf</fontPath>
			<fontSize>0.023</fontSize>
		</text>
		
	<!-- Unused Metadata -->
		<text name="md_lbl_favorite, md_favorite, md_lbl_rating, md_lbl_lastplayed, md_lbl_playcount, md_playcount">
			<fontPath>./common/fonts/AdobeBlank.ttf</fontPath>
		</text>
		
		<datetime name="md_lastplayed">
			<fontPath>./common/fonts/AdobeBlank.ttf</fontPath>
		</datetime>
		
		<rating name="md_rating">
			<filledPath>./common/images/transparent.png</filledPath>
			<unfilledPath>./common/images/transparent.png</unfilledPath>
		</rating>
	</view>
	
</theme>
